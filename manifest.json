{
    "name": "Timely",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "author": "Cyril Kamal",
    "description":"Optimize your Google Maps route with Timely!",
    "content_scripts":[
        {
            "js":["content.js"],
            "matches":["*://www.google.com/maps/*"],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Timely"
    },
    "background": {
        "service_worker": "background.js" 
    },
    "permissions": ["activeTab", "identity", "identity.email", "tabs", "nativeMessaging", "storage"],
    "host_permissions": ["http://localhost:3001/*"]
}